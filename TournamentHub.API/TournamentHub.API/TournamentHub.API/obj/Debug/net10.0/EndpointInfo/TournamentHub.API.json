{
  "openapi": "3.0.4",
  "info": {
    "title": "TournamentHub.API",
    "version": "1.0"
  },
  "paths": {
    "/Auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountRequestRegister"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountRequestRegister"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AccountRequestRegister"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/Auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountRequestLogin"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountRequestLogin"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AccountRequestLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AccountRequestLogin": {
        "type": "object",
        "properties": {
          "login": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "AccountRequestRegister": {
        "type": "object",
        "properties": {
          "userName": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "tags": [
    {
      "name": "Auth"
    }
  ]
}